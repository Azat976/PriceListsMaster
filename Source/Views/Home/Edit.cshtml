@using WebApp.Models
@model Price
@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm())
{

    <fieldset>
        <legend>Студент</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label"><b>Имя</b></div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
        </div>

        @*<div class="editor-label"><b>Фамилия</b></div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Surname)
        </div>*@
        <div class="editor-label"><b>Курсы</b></div>
        @foreach (PriceList c in ViewBag.PriceLists)
        {
            <input type="checkbox" name="selectedPriceLists" value="@c.Id"
                   @(Model.PriceLists.Contains(c) ? "checked=\"checked\"" : "") />@c.Name <br />
            }

        <p>
            <input type="submit" value="Сохранить" />
        </p>
    </fieldset>
}



